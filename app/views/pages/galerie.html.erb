  <div class="gallery-grid">
    <%= link_to image_tag("_MG_1955.JPG"), "/new_york", class: "gallery-thumb" %>
    <%= link_to image_tag("_MG_2248.JPG"), "/landscapes", class: "gallery-thumb" %>
    <%= link_to image_tag("_MG_2109.JPG"), "/streets", class: "gallery-thumb" %>
    <%= link_to image_tag("_MG_2270.JPG"), "/charmes", class: "gallery-thumb" %>
    <%= link_to image_tag("_MG_1955.JPG"), "/new_york", class: "gallery-thumb" %>
  </div>
</section>

<section class="photo-row">
  <%= image_tag "_MG_1955.JPG", class: "photo-item" %>
  <%= image_tag "_MG_2248.JPG", class: "photo-item" %>
  <%= image_tag "_MG_2270.JPG", class: "photo-item" %>
  <%= image_tag "_MG_2321.JPG", class: "photo-item" %>
  <%= image_tag "_MG_2248.JPG", class: "photo-item" %>
</section>

<style>
  body {
    font-family: 'Lato';
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }
  h1 {
  font-family: 'Playfair Display', sans-serif;
  font-size: 3rem;
  text-align: center;
  margin-bottom: 20px;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 16px;
  padding: 10px;
  max-width: 1200px;
  margin: 0 auto;
}

.gallery-thumb {
  display: block;
  width: 100%;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  /*border-radius: 8px;*/
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  transition: transform 0.3s ease;
}

.gallery-thumb img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.gallery-thumb:hover {
  transform: scale(1.03);
}

  .photo-row {
    display: flex;
    justify-content: center;
    /*gap: 20px;*/ /* espace entre les photos */
    margin: 40px auto;
    width: 500px;
  }

  .photo-item {
    width: 200px;
    height: 500px;
    object-fit: cover;
    /*border-radius: 8px;*/
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .photo-item:hover {
    transform: scale(1.05);
  }

  @media (max-width: 900px) {
    .photo-row {
      flex-wrap: wrap;
      gap: 15px;
    }

    .photo-item {
      width: 45%;
      height: auto;
      aspect-ratio: 2/5;
    }
  }

</style>
