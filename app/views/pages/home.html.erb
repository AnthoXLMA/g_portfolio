<section class="resume">
    <%= image_tag "_MG_1955.JPG" %>
  <div style="text-align: center;">
    <h1>Bienvenue</h1>
      <p>Je suis photographe professionnel spécialisé dans la capture de moments authentiques, de paysages immersifs et de récits visuels pour les voyageurs, hôtels et marques inspirées.</p>
    <div>
      <%= link_to "Voir la Galerie", galerie_path %>
      <%= link_to "En savoir plus", a_propos_path %>
    </div>
  </div>
</section>

  <section class="gallery-section">
    <div class="grid-gallery">
        <%["_MG_1955.JPG", "_MG_1956.JPG", "_MG_2109.JPG", "_MG_2110.JPG", "_MG_2270.JPG", "_MG_2321.JPG", "_MG_2247.JPG", "_MG_2248.JPG"].each do |img| %>
        <div><%= image_tag img %></div>
      <% end %>
    </div>
  </section>

<style>
    body {
      font-family: sans-serif;
      margin: 0;
      padding: 0;
    }
    h1 {
      font-size: 3rem;
    }
    .resume{
      padding:40px;
      bottom: 10px;
      top:10px;
      width:100%;
      height:auto;
      background-color: black;
      color:white;
    }
    .gallery-section {
      padding: 40px;
      background: #f9f9f9;
      text-align: center;
    }

    .gallery-section h2 {
      font-size: 2rem;
      margin-bottom: 30px;
    }

    .grid-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 16px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .grid-gallery img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease;
    }

    .grid-gallery img:hover {
      transform: scale(1.03);
    }
  </style>
